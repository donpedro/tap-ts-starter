{
  "name": "tap-ts-starter",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "main": "dist/tap-main.cjs.js",
  "module": "dist/tap-main.es2016.js",
  "typings": "dist/types/tap-main.d.ts",
  "files": [
    "dist"
  ],
  "author": "Peter Lambert <peterl@sbcotton.com>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc && tsc --module commonjs --outDir dist/lib && rollup -c rollup.config.ts && npm run build-docs-tap && npm run build-docs-aws",
    "start": "tsc -w & rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "build-default-docs": "typedoc --out dist/docs --target es6 --theme minimal --mode file src",
    "build-docs-tap": "typedoc --mode modules --out dist/docs-tap src/tap-main.ts --target es6",
    "build-docs-aws": "typedoc --mode modules --out dist/docs-aws src/aws/handler.ts --target es6",
    "run-rollup": "node dist/tap-main.cjs --config tap-config.json"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.2",
    "aws-sdk": "^2.245.1",
    "colors": "^1.3.0",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.1",
    "cross-env": "^5.1.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.0",
    "jest": "^22.4.4",
    "lint-staged": "^7.1.2",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.12.1",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.59.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript": "^0.8.1",
    "semantic-release": "^15.5.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3",
    "validate-commit-msg": "^2.12.2"
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.2",
    "@types/mailparser": "^2.0.2",
    "fs-extra": "^6.0.1",
    "generate-schema": "^2.6.0",
    "lodash": "^4.17.10",
    "mailparser": "^2.2.0"
  }
}
